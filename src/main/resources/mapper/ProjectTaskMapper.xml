  <sql id="query">
    <where>
      <if test="pid != null">
        and a.pid = #{pid}
      </if>
      <if test="uid != null">
        and a.uid = #{uid}
      </if>
      <if test="parentId != null">
        and a.parent_id = #{parentId}
      </if>
      <if test="taskType != null and taskType != ''">
        and a.task_type = #{taskType}
      </if>
      <if test="taskStatus != null and taskStatus != ''">
        and a.task_status = #{taskStatus}
      </if>
      <if test="taskName != null and taskName != ''">
        and a.task_name = #{taskName}
      </if>
    </where>
  </sql>

  <select id="selectTasks" parameterType="com.lei.tool.dto.TaskDto" resultType="com.lei.tool.dto.TaskDto">
    select a.*,b.project_name as projectName,c.user_name as userName from project_task a left join project_group b on a.pid = b.id left join u_user c on a.uid = c.id
    <include  refid="query"></include>
  </select>

  <select id="selectTasksCount" parameterType="com.lei.tool.dto.TaskDto" resultType="int">
    select count(1) from project_task a left join project_group b on a.pid = b.id left join u_user c on a.uid = c.id
    <include  refid="query"></include>
  </select>
